<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.techmantra.collisiondetection.Activities.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="5dp"
        android:background="@drawable/input_outline"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:text="Please enter details below" />

        <EditText
            android:id="@+id/emailSignUpField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="10dp"
            android:layout_margin="4dp"
            android:background="@drawable/input_outline"
            android:inputType="textPersonName"
            android:hint="email" />


        <EditText
            android:id="@+id/displayNameFieldId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="10dp"
            android:layout_margin="4dp"
            android:background="@drawable/input_outline"
            android:hint="Display Name"

             />

        <EditText
            android:id="@+id/passwordSignUpField1Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="10dp"
            android:layout_margin="4dp"
            android:hint="password"
            android:background="@drawable/input_outline"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/passwordSignUpField2Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="10dp"
            android:layout_margin="4dp"
            android:hint="Confirm password"
            android:background="@drawable/input_outline"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/signUpBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"
            android:layout_gravity="center_horizontal"
            android:text="Sign Up" />

        <ProgressBar
            android:id="@+id/progressSpinnerSignup"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            tools:ignore="InvalidId" />

    </LinearLayout>
</RelativeLayout>
